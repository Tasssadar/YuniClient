<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent">
    <TextView android:id="@+id/entry_id"
    		  android:text=""
    		  android:layout_width="wrap_content"
    		  android:layout_height="wrap_content"
			  android:visibility="gone"/>
    <TextView android:id="@+id/key_label"
    		  android:text="Key"
    		  android:layout_width="80px"
    		   android:layout_marginTop="15px"
    		  android:layout_height="wrap_content" />
	<EditText android:id="@+id/key_input" 
              android:layout_width="80px" 
              android:layout_height="wrap_content" 
              android:layout_marginTop="10px"
              android:background="@android:drawable/editbox_background"
              android:layout_toRightOf="@id/key_label"
              android:layout_marginRight="20px"
              android:maxLength="1"
              android:text="" />
    <TextView android:id="@+id/downUp_label"
    		  android:text="Down/Up"
    		  android:layout_width="60px"
    		  android:layout_marginTop="15px"
    		  android:layout_toRightOf="@id/key_input"
    		  android:layout_height="wrap_content" />
    <EditText android:id="@+id/downUp_input" 
              android:layout_width="80px" 
              android:layout_height="wrap_content" 
              android:layout_marginTop="10px"
              android:background="@android:drawable/editbox_background"
              android:layout_toRightOf="@id/downUp_label"
              android:maxLength="1"
              android:text="" />

	<TextView android:id="@+id/event_label"
    		  android:text="EndEvent"
    		  android:layout_width="80px"
    		  android:layout_marginTop="15px"
    		  android:layout_below="@id/downUp_input"
    		  android:layout_height="wrap_content" />
    <EditText android:id="@+id/event_input" 
              android:layout_width="120px" 
              android:layout_height="wrap_content" 
              android:layout_marginTop="10px"
              android:background="@android:drawable/editbox_background"
              android:layout_toRightOf="@id/event_label"
              android:layout_below="@id/downUp_input"
              android:maxLength="3"
              android:text="" />
    
    <TextView android:id="@+id/byte_label"
    		  android:text="Bytes"
    		  android:layout_width="80px"
    		  android:layout_marginTop="15px"
    		  android:layout_below="@id/event_input"
    		  android:layout_height="wrap_content" />
	<EditText android:id="@+id/byte1_input" 
              android:layout_width="80px" 
              android:layout_height="wrap_content" 
              android:layout_marginTop="10px"
              android:background="@android:drawable/editbox_background"
              android:layout_toRightOf="@id/byte_label"
              android:layout_marginRight="20px"
              android:layout_below="@id/event_input"
              android:maxLength="3"
              android:text="" />
    <EditText android:id="@+id/byte2_input" 
              android:layout_width="80px" 
              android:layout_height="wrap_content" 
              android:layout_marginTop="10px"
              android:background="@android:drawable/editbox_background"
              android:layout_toRightOf="@id/byte1_input"
              android:layout_below="@id/event_input"
              android:maxLength="3"
              android:text="" />
    
    <TextView android:id="@+id/big_label"
    		  android:text="BigNum"
    		  android:layout_width="80px"
    		  android:layout_marginTop="15px"
    		  android:layout_below="@id/byte2_input"
    		  android:layout_height="wrap_content" />
    <EditText android:id="@+id/big_input" 
              android:layout_width="120px" 
              android:layout_height="wrap_content" 
              android:layout_marginTop="10px"
              android:background="@android:drawable/editbox_background"
              android:layout_toRightOf="@id/big_label"
              android:layout_below="@id/byte2_input"
              android:text="" />
              
    <TextView android:id="@+id/eventstext"
    		  android:text="EVENT_TIME               = 1,
EVENT_SENSOR_LEVEL_HIGHER= 2,
EVENT_SENSOR_LEVEL_LOWER = 4,
EVENT_RANGE_MIDDLE_HIGHER= 8,
EVENT_RANGE_MIDDLE_LOWER = 16,
EVENT_DISTANCE           = 32,"
    		  android:layout_width="fill_parent"
    		  android:layout_marginTop="15px"
    		  android:layout_below="@id/big_input"
    		  android:layout_height="wrap_content" />      
    		     
    <Button android:id="@+id/button_save_eeprom_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>